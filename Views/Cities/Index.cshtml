@model IEnumerable<GuideMe.Models.Business_models.City>

@{
    ViewBag.Title = "Index";
}

    <body >    
        <section class="dorne-listing-destinations-area section-padding-100-50" style="background-image: url(https://0i.is/lRz1); background-size: cover; background-repeat: no-repeat">
            <div class="container">
                <div class="row">
                    <div class="col-12">
                        <div class="section-heading dark text-center">
                            <span></span>
                            <h4>Cities</h4>
                        </div>
                    </div>
                </div>
                <div class="container-fluid">
                    <div class="row">
                        <div class="col-5">

                        </div>
                        @if (Request.IsAuthenticated && User.IsInRole("Admin"))
                        {
                            @Html.ActionLink("Create", "Create", null, new { @class = "btn btn-primary col-2" })
                        }
                    </div>
                    <div class="row">
                            @foreach (var item in Model)
                            {

                                <!-- Single Features Area -->
                                <div class="col-4 col-sm-6 col-lg-4">

                                    <div class="single-features-area mb-50">

                                        <img src="~/img/uploads/@item.Image" alt="@item.Name">
                                        <!-- Price -->
                                        <div class="price-start">
                                            <p>
                                                @Html.DisplayFor(modelItem => item.Name)
                                            </p>
                                        </div>
                                        <div class="feature-content d-flex align-items-center justify-content-between">
                                            <div class="feature-title">
                                                <h5>@Html.DisplayFor(modelItem => item.Name)</h5>
                                                @if (Request.IsAuthenticated && User.IsInRole("Admin"))
                                                {
                                                    @Html.ActionLink("Edit", "Edit", new { id = item.ID }, new { @class = "btn btn-warning" })
                                                    @Html.ActionLink("Delete", "Delete", new { id = item.ID }, new { @class = "btn btn-danger" })
                                                }
                                            </div>
                                        </div>

                                    </div>

                                </div>

                            }
                        </div>
                    </div>

            </div>

        </section>
    </body>
