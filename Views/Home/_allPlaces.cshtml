@model GuideMe.ViewModels.PlacePriceVM


@{double delay = 0.2; }



<div class="col-12">
    <div class="features-slides owl-carousel">

        @foreach (var PublicItem in Model.PlaceList)
        {
            if (Model.PriceList.Where(pr => pr.PlaceID == PublicItem.ID).FirstOrDefault() != null)
            {
                <!-- Single Features Area -->
                <div class="single-features-area">

                    <img src="~/img/uploads/@PublicItem.Image" alt="" />


                    <!-- Price -->
                    <div class="price-start">
                        @*<p>FROM $59/night</p>*@

                        <p>@Model.PriceList.Where(pr => pr.PlaceID == PublicItem.ID).FirstOrDefault().price EGP</p>



                    </div>
                    <div class="feature-content d-flex align-items-center justify-content-between wow fadeInUp">
                        <div class="feature-title">

                            <h5>@PublicItem.Name</h5>
                            <p>@PublicItem.Address</p>


                        </div>
                        <div class="feature-favourite">
                            <a href="#"><i class="fa fa-heart-o" aria-hidden="true"></i></a>
                        </div>
                    </div>
                </div>
            }
            delay = delay + 0.2;
        }

    </div>
</div>
